<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VarificationActivity">


    <LinearLayout
        android:id="@+id/backImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/backgrond_" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_120"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/logo1" />

    <android.support.v7.widget.CardView
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:id="@+id/varifyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:padding="@dimen/dp_2"
            android:text="Verification"
            android:textAllCaps="true"
            android:textColor="@color/light_yellow"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/demotext"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/varifyText"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:padding="@dimen/dp_4"
                android:text="Enter your verification code"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/varifyTexts"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_below="@id/demotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:maxLength="1"
                    android:id="@+id/first"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/light_yellow"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:inputType="number"
                    android:background="@drawable/varify_back"/>

                <EditText
                    android:maxLength="1"
                    android:id="@+id/second"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/light_yellow"
                    android:padding="2dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/varify_back"/>

                <EditText
                    android:maxLength="1"
                    android:id="@+id/third"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/light_yellow"
                    android:padding="2dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/varify_back"/>
                <EditText
                    android:maxLength="1"
                    android:id="@+id/fourth"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/light_yellow"
                    android:padding="2dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/varify_back"/>
            </LinearLayout>

            <Button
                android:id="@+id/varify"
                android:layout_below="@id/varifyTexts"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginEnd="@dimen/dp_32"
                android:text="Verify Code"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_30"
                android:id="@+id/resend"
                android:layout_below="@id/varify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend Verification Code"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>