<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">

    <LinearLayout
        android:id="@+id/backImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/backgrond_" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>
    <TextView
        android:id="@+id/title"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"/>

    <ImageView
        android:visibility="visible"
        android:id="@+id/editButton"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_alignParentEnd="true"/>
    <RelativeLayout
        android:id="@+id/imageSelect"
        android:layout_below="@id/title"
        android:layout_width="140dp"
        android:layout_centerHorizontal="true"
        android:layout_height="140dp">

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/ic_man_user" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_8"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_below="@id/imageSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/nameData"
                android:background="@drawable/back_ring"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="Name"/>
                <EditText
                    android:id="@+id/et_name"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/nameText"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentEnd="true"
                    android:hint=""/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/emailData"
                android:layout_below="@id/nameData"
                android:background="@drawable/back_ring"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="Email"/>
                <EditText
                    android:id="@+id/et_mail"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14"
                    android:inputType="textEmailAddress"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/emailText"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint=""/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/numberData"
                android:layout_below="@id/emailData"
                android:background="@drawable/back_ring"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/numberText"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="Phone Number"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/et_number"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/numberText"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint=""/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/button_background"
                android:layout_below="@id/numberData"
                android:id="@+id/Logout"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="45dp" >
                <ImageView
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:id="@+id/logoutImg"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_logout"/>
                <TextView
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="45dp"
                    android:layout_toEndOf="@id/logoutImg"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="LOG OUT"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>