<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MobileNumberActivity">

    <LinearLayout
        android:id="@+id/backImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/backgrond_" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_120"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/logo1" />

    <android.support.v7.widget.CardView
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:id="@+id/varifyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:padding="@dimen/dp_2"
                android:text="Verification"
                android:textAllCaps="true"
                android:textColor="@color/light_yellow"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/demotext"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/varifyText"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:padding="@dimen/dp_4"
                android:text="Enter your mobile number"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />


            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/mobileNo"
                android:layout_below="@id/demotext"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/edit_background">


                <com.hbb20.CountryCodePicker
                    app:ccp_contentColor="@color/black"
                    app:ccp_showFlag="false"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_showNameCode="false"
                    android:paddingStart="@dimen/dp_4"
                    app:ccp_showPhoneCode="true"
                    app:ccpDialog_backgroundColor="@color/white"
                    app:ccpDialog_textColor="@color/black"
                    android:id="@+id/ccp"
                    app:ccp_showFullName="false"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="match_parent">

                </com.hbb20.CountryCodePicker>
                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@null"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="9999988888"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="@dimen/dp_4" />
            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_below="@id/mobileNo"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginEnd="@dimen/dp_32"
                android:text="Next"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>