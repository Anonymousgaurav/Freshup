<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/barbarImage"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@drawable/ic_man_user" />

        <TextView
            android:id="@+id/barbarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/barbarImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:text="Name"
            android:textColor="@color/light_yellow"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/inqueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/barbarName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="@string/in_queue"
            android:textColor="@color/light_yellow"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/inqueueNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/barbarName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_toEndOf="@id/inqueue"
            android:text="4"
            android:textColor="@color/light_yellow"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/joinQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inqueue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_14"
            android:background="@drawable/button_background"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6"
            android:text="@string/join_queue"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/seeQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/joinQueue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_14"
            android:background="@drawable/button_background"
            android:paddingStart="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4"
            android:text="@string/see_queue"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>