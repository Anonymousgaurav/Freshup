<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_5"
    android:layout_margin="@dimen/dp_5"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@drawable/ic_man_user"
        android:id="@+id/barbarImage"
        android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/barbarName"
            android:layout_below="@id/barbarImage"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/light_yellow"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/inqueue"
            android:layout_below="@id/barbarName"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Queue - "
            android:layout_marginBottom="@dimen/dp_4"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/light_yellow"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/inqueueNo"
            android:layout_toEndOf="@id/inqueue"
            android:layout_below="@id/barbarName"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginBottom="@dimen/dp_4"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/light_yellow"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_below="@id/inqueue"
            android:id="@+id/joinQueue"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Join Queue"
            android:textAllCaps="false"
            android:paddingStart="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>