<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/beard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_6"
        android:background="@drawable/back_ring">

        <TextView
            android:id="@+id/textSubService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="Beard"
            android:padding="@dimen/dp_2"
            android:layout_toStartOf="@id/beardArrow"
            android:textAllCaps="true"
            android:textColor="@color/light_yellow"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/beardArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@drawable/light_yellow_right_arrow" />

        <ImageView
            android:id="@+id/beardArrowDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/ic_down_arrow"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:layout_below="@id/textSubService"
            android:id="@+id/subsubItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>