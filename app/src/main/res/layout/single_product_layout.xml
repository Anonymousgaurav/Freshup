<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/settingCard"
        android:layout_margin="@dimen/dp_6"
        android:layout_below="@id/item_text"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:cardCornerRadius="@dimen/dp_8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/productImage"
                android:layout_margin="@dimen/dp_6"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/productName"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/productImage"
                android:textSize="@dimen/sp_12"
                android:text="Jack Black Wax Pomade"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/productServices"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_below="@id/productName"
                android:textSize="@dimen/sp_12"
                android:text="(Natural Shine,Flexible Hold)"/>



            <TextView
                android:textAlignment="center"
                android:id="@+id/productType"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productServices"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                android:text="Hair Care"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/productPrice"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productType"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="$39.00"/>

            <Button
                android:id="@+id/buyButton"
                android:layout_centerHorizontal="true"
                android:background="@drawable/back_light_yellow_button"
                android:textColor="@color/white"
                android:text="@string/add_to_cart"
                android:textAllCaps="false"
                android:layout_width="130dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>